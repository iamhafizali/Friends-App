<% if user_signed_in? %>
  <br>
  <% content_for :title, "Friends" %>
  <h1>Friends</h1>
  <table class="table table-bordered">
    <thead class="table-info">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <%= render friend %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class:"btn bg-info" %>
<% else %>
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
<% end %>
